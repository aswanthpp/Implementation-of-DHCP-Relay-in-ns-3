## -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-

def build(bld):
    if not bld.env['ENABLE_EXAMPLES']:
        return;

    obj = bld.create_ns3_program('dhcp-example', ['internet', 'internet-apps', 'csma', 'point-to-point', 'applications'])
    obj.source = 'dhcp-example.cc'
    obj = bld.create_ns3_program('dhcp-example-relay', ['internet', 'internet-apps', 'csma', 'point-to-point', 'applications'])
    obj.source = 'dhcp-example-relay.cc'
    obj = bld.create_ns3_program('wns3-relay-example', ['internet', 'internet-apps', 'csma', 'point-to-point', 'applications'])
    obj.source = 'wns3-relay-example.cc'
